<main class="container">
  <div class="d-flex justify-content-between my-4">
    <button class="btn secondary-btn" type="button" {{on "click" this.navigateToDashboard }}>Back to Dashboard</button>
    <h3 class="text-white font-weight-bold">INVENTORY OVERVIEW</h3>
    <button class="btn primary-btn" {{on "click" this.openModal }} type="button">+ Add Product</button>
  </div>
  <div class="table-view bg-white p-3 table-responsive-lg">
    <h5 class="table-head mb-1">Inventory Overview</h5>
    <DataTable @setCurrentProduct={{this.setCurrentProduct}} @data={{this.products}}></DataTable>
  </div>
  {{#if this.showModal}}
    <Modal>
      <ProductForm @product={{this.currentProduct}} @addProduct={{this.addProduct}} @closeModal={{this.closeModal}}/>
    </Modal>
  {{/if}}
</main>