<form class="p-2" {{on "submit" this.submitForm}}>
  <h6 class="form-head text-center mb-3">ADD PRODUCT</h6>
    <div class="form-group">
      <label for="inputEmail4">Product*</label>
      <input required type="text" class="form-control" id="inputEmail4" placeholder=""  value={{this.product}} {{on "input" (fn this.handleInput "product")}}>
    </div>
    <div class="form-group">
      <label for="inputState">Category</label>
      <select id="inputState" class="form-control" value={{this.category}} {{on "change" (fn this.handleInput "category")}}>
        <option hidden></option>
        <option value="Laptops">Laptops</option>
        <option value="SmartPhones">SmartPhones</option>
      </select>
    </div>
  <div class="form-group">
    <label for="inputAddress">Brand*</label>
    <input required type="text" class="form-control" id="inputAddress" placeholder="" value={{this.brand}} {{on "input" (fn this.handleInput "brand")}}>
  </div>
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="inputCity">Stock</label>
      <input type="number" class="form-control" id="inputCity" value={{this.stock}} {{on "input" (fn this.handleInput "stock")}}>
    </div>
    <div class="form-group col-md-6">
      <label for="inputZip">Price</label>
      <input type="number" class="form-control" id="inputZip" value={{this.price}} {{on "input" (fn this.handleInput "price")}}>
    </div>
  </div>
  <div class="form-group">
    <label for="inputAddress2">Supplier*</label>
    <input required type="text" class="form-control" id="inputAddress2" placeholder="" value={{this.supplier}} {{on "input" (fn this.handleInput "supplier")}}>
  </div>
  <div class="form-group d-flex flex-column">
    <div class="d-flex justify-content-between">
      <label for="customRange3">Rating</label>
      <p class="current-rating">{{this.rating}}</p>
    </div>
    <input type="range" class="form-range" min="0" max="5" step="0.5" id="customRange3" value={{this.rating}} {{on "input" (fn this.handleInput "rating")}}>
  </div>
  <div class="d-flex justify-content-center mt-4">
    <button type="submit" class="btn primary-btn mr-3">ADD</button>
    <button type="submit" {{on "click" @closeModal }} class="btn secondary-btn ml-4">CANCEL</button>
  </div>
</form>